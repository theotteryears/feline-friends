<div class="container mt-3 text-center">
  <h1>My Profile</h1>
  <div class="d-flex justify-content-around mt-3 mb-4">
    <%= link_to "Edit", edit_user_registration_path, class: "btn btn-login" %>
    <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "btn btn-password" %>
  </div>
  <div class="mb-3">
    <% if current_user.img.attached? %>
      <%= cl_image_tag current_user.img.key, class: "avatar-square" %>
    <% end %>
  </div>
    <h3><%= current_user.first_name.capitalize %> <%= current_user.last_name.capitalize %></h3>
    <p><%= current_user.email %> - <%= current_user.city %></p>
  <div class="text-center mt-3">
    <h2><span class="text-blue">Past Matches</span></h2>
    <% @past_matches.each do |match| %>
      <div class="match-cards">
        <div class="match-card.trip mb-3">
        <p>Your match request with <br><span class="text-yellow"><%= match.cat.name %></span> was <span class="text-red"><%= match.status %></span></p>
        We hope you had a great time! Please rate the cat ðŸ˜»
      </div>
    </div>
    <% end %>
  </div>
</div>
