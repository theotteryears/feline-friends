<div class="container mt-5">
  <h2 class="text-center">Add your cat</h2>
  <div class="text-start">
  <%= simple_form_for(@cat) do |f| %>
    <%= f.input :name %>
    <%= f.input :age %>
    <%= f.input :breed %>
    <%= f.input :personality, label: "Describe your cat" %>
    <%= f.input :img_1, as: :file, label: "Add your cat's photo" %>
    <%= f.input :img_2, as: :file, label: "Add another photo (optional)"%>
    <%= f.input :img_3, as: :file, label: "Add yet another photo (optional)"%>
    <div class="text-center">
    <%= f.submit "Add", class: "btn btn-normal mt-3" %>
  <% end %>
  </div>
</div>
