<div id="message-<%= message.id %>">
  <small>
    <strong><%= message.user.first_name %></strong>
    <% if message.created_at.to_date == Date.today %>
      <i><%= message.created_at.strftime("%l:%M %p") %></i>
    <% else %>
      <i><%= message.created_at.strftime("%a %b %e") %></i>
    <% end %>
  </small>
  <p><%= message.content %></p>
</div>
