<div class="container w-75 mt-3 text-center">
  <h1>Cats</h1>
  <% @cats.each do |cat| %>
    <div class="container mb-5">
      <h2><%= cat.name %></h2>
      <% cat.img_1.each do |photo| %>
        <%= cl_image_tag photo.key, height: 300, width: 300 %>
      <% end %>
      <p><%= cat.details%></p>
      <%= link_to "Show this cat", cat_path(cat), class: "btn btn-primary" %>
    </div>
  <%end%>

  <%= link_to "Add a cat", new_cat_path if policy(Cat).new? %>
  <%= link_to "Back", root_path, class: "btn btn-primary" %>
</div>
